# Veloura Environment Configuration

# Application
NEXT_PUBLIC_APP_NAME=Veloura
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_BASE_URL=http://localhost:3001/api

# Stripe Configuration
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_GOOGLE_ADS_CONVERSION_ID=AW-XXXXXXXXX

# Database (if using)
DATABASE_URL=postgresql://username:password@localhost:5432/veloura
REDIS_URL=redis://localhost:6379

# Authentication
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# Email Services
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here
MAILGUN_API_KEY=your_mailgun_api_key_here
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Third-party Integrations
KLAVIYO_API_KEY=your_klaviyo_api_key_here
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token_here
FACEBOOK_PIXEL_ID=your_facebook_pixel_id_here

# Inventory & Fulfillment
SHOPIFY_STORE_URL=your_store.myshopify.com
SHOPIFY_ACCESS_TOKEN=your_shopify_access_token_here
FULFILLMENT_API_KEY=your_fulfillment_api_key_here

# Image & Media
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Security
ENCRYPTION_KEY=your_32_character_encryption_key_here
JWT_SECRET=your_jwt_secret_here

# Feature Flags
NEXT_PUBLIC_ENABLE_LOYALTY_PROGRAM=true
NEXT_PUBLIC_ENABLE_MULTI_CURRENCY=true
NEXT_PUBLIC_ENABLE_REVIEWS=true
NEXT_PUBLIC_ENABLE_WISHLIST=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# Development
NODE_ENV=development
NEXT_PUBLIC_DEBUG_MODE=true
